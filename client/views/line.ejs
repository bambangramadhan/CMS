<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
  <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="http://localhost:3000/"><span class="glyphicon glyphicon-arrow-left"> Dashboard</span>
        </a>
      </div>
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <div id="chartContainer" style="height: 300px; width: 100%;"></div>
  </div>
  <script type="text/javascript">

  $(document).ready(function(){
    drawChart();
  });

  function drawChart() {
    $.ajax({
      url: 'http://localhost:3001/api/datadate/',
      method: "GET"
    }).done(data => {
      let arr = [];
      let d;
      data.forEach(item => {
        d = new Date(item.letter)
        arr.push({y: item.frequency, label: d.getFullYear()})
      })
      var limit = 10000;    //increase number of dataPoints by increasing the limit
      var y = 100;
      var data = [];
      var dataSeries = { type: "line" };
      var dataPoints = arr;
      dataSeries.dataPoints = dataPoints;
      data.push(dataSeries);

      //Better to construct options first and then pass it as a parameter
      var options = {
        zoomEnabled: true,
        animationEnabled: true,
        title: {
          text: "Line Chart"
        },
        axisY: {
          title: "Frequency"
        },
        data: data  // random data
      };

      $("#chartContainer").CanvasJSChart(options);
    })
  }

</script>
</body>
</html>
